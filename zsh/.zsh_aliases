
# UMaT proxy network
proxy-on() {
    export http_proxy=http://aadoko:umat@192.168.1.3:8080
    export https_proxy=http://aadoko:umat@192.168.1.3:8080
    export ftp_proxy=http://aadoko:umat@192.168.1.3:8080
    export HTTP_PROXY=http://aadoko:umat@192.168.1.3:8080
	export HTTPS_PROXY=http://aadoko:umat@192.168.1.3:8080
}

proxy-off() {
    export http_proxy=
    export https_proxy=
    export ftp_proxy=
    export HTTP_PROXY=
	export HTTPS_PROXY=
}

mcd() 
{ 
    [ -n "$1" ] && mkdir -p "$1" && cd "$1"; 
}

