! ----------------------------------------------------------------------
! xterm 
! ------------------------------------------------------------------------------

!xterm*VT100.geometry: 80x32
xterm*faceName:    	Terminus:style=Regular:size=12
xterm*borderWidth:	0
XTerm*foreground: 	rgb:b2/b2/b2
XTerm*background: 	rgb:08/08/08
XTerm*color0: 		rgb:28/28/28
xterm*termName:		xterm-256color
XTerm*locale: 		true
Xterm*saveLines: 	4096

!*VT100.colorBDMode:     	true
!*VT100.colorBD:         	red
!*VT100.colorULMode:     	true
!*VT100.colorUL:         	cyan
!*VT100.veryBoldColors: 	6

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
!rofi.color-enabled: true
!rofi.color-window: #393939, #393939, #268bd2
!rofi.color-normal: #393939, #ffffff, #393939, #268bd2, #ffffff
!rofi.color-active: #393939, #268bd2, #393939, #268bd2, #205171
!rofi.color-urgent: #393939, #f3843d, #393939, #268bd2, #ffc39c
!rofi.disable-history: true

! ROFI Theme
rofi.lines: 5
rofi.width: 25
rofi.padding: 5
rofi.opacity: 50
rofi.color-enabled: true
rofi.color-window:  #272727, #272727, #272727
rofi.color-normal:  #272727, #FAFAFA, #272727, #FAFAFA, #272727
rofi.color-active:  #272727, #FAFAFA, #272727, #272727, #FAFAFA
rofi.color-urgent: #272727, #FAFAFA, #272727, #272727, #FF6B6B

! ------------------------------------------------------------------------------
!URxvt 
! ------------------------------------------------------------------------------

! General settings
URxvt.saveLines: 65535
URxvt.scrollBar: False
URxvt.scrollstyle: rxvt
URxvt.termName: xterm-256color
URxvt.urgentOnBell: True
URxvt.cursorBlink: False
Xcursor.theme: Neutral
URxvt*font: xft:Hack:size=12
dmenu.font: envypn-10
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0200/c800
URxvt.transparent: true
URxvt.shading:20

URxvt.perl-ext-common: default,matcher,clipboard,resize-font,fullscreen
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.internalBorder: 10

! Included this so you know how to make your foreground not match the color of your background
URxvt.foreground: #eeeeee

! Keymaps
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.F11: perl:fullscreen:switch

!Xterm escapes, word by word movement
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C

URxvt*skipBuiltinGlyphs:    true
